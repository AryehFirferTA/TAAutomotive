<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.taautomotive.shared" >

    <uses-sdk android:minSdkVersion="28" />

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PLAYBACK" />

    <application android:appCategory="audio" >
        <meta-data
            android:name="com.google.android.gms.car.application"
            android:resource="@xml/automotive_app_desc" />

        <!--
         MediaLibraryService: media browsing and playback for Android Automotive.
         Supports both Media3 MediaBrowser and legacy MediaBrowserCompat.
        -->
        <service
            android:name="com.example.taautomotive.shared.TAMediaLibraryService"
            android:exported="true"
            android:foregroundServiceType="mediaPlayback" >
            <intent-filter>
                <action android:name="androidx.media3.session.MediaLibraryService" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.media.browse.MediaBrowserService" />
            </intent-filter>
        </service>
    </application>

</manifest>